rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Admins collection - only admins can read
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow write: if false; // Admins must be created manually
    }
    
    // Employees collection
    match /employees/{employeeId} {
      // Employees can read and update their own document
      allow read, update: if isAuthenticated() && request.auth.uid == employeeId;
      // Employees can create their own document during registration
      allow create: if isAuthenticated() && request.auth.uid == employeeId;
      // Admins can read all employees
      allow read: if isAdmin();
    }
    
    // Responses collection
    match /responses/{responseId} {
      // Employees can create their own response (once)
      allow create: if isAuthenticated() && 
                      request.auth.uid == responseId &&
                      !exists(/databases/$(database)/documents/responses/$(responseId));
      // Employees can read their own response
      allow read: if isAuthenticated() && request.auth.uid == responseId;
      // Admins can read all responses
      allow read: if isAdmin();
      // No one can update or delete responses
      allow update, delete: if false;
    }
    
    // Survey questions collection
    match /surveyQuestions/{questionId} {
      // Anyone authenticated can read questions
      allow read: if isAuthenticated();
      // Only admins can write questions
      allow write: if isAdmin();
    }
  }
}
