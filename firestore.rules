rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated with Firebase Auth
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Admins collection - authenticated users can read their own admin doc
    match /admins/{adminId} {
      allow read: if isAuthenticated(); // Allow any authenticated user to check if they're admin
      allow write: if false; // Admins must be created manually
    }
    
    // Employees collection
    match /employees/{employeeId} {
      // Allow read for anyone (employees don't use Firebase Auth)
      allow read: if true;
      // Admins can write (create, update, delete) employees
      allow write: if isAdmin();
    }
    
    // Responses collection
    match /responses/{responseId} {
      // Anyone can create a response (employees don't use Firebase Auth)
      // But we check employeeId matches and survey not completed in application logic
      allow create: if true;
      // Anyone can read (will be filtered in app)
      allow read: if true;
      // Admins can read all
      allow read: if isAdmin();
      // No one can update or delete responses
      allow update, delete: if false;
    }
    
    // Survey questions collection
    match /surveyQuestions/{questionId} {
      // Anyone can read questions (needed for survey)
      allow read: if true;
      // Only admins can write questions
      allow write: if isAdmin();
    }
  }
}
